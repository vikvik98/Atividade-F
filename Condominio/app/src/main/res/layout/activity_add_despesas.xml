<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="70dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.AddDespesasActivity"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/add_nome_despesa"
        android:background="@drawable/edit_text_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome da despesa"/>

    <TextView
        android:layout_marginTop="4dp"
        android:background="@drawable/edit_text_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rateada?"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/group_ratificado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/verdadeiro"
            android:checked="true"
            android:text="Sim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/falso"
            android:text="Não"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <EditText
        android:id="@+id/add_mes_despesa"
        android:background="@drawable/edit_text_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mês da despesa (mes/dia)"/>


    <EditText
        android:inputType="number"
        android:id="@+id/add_valor_despesa"
        android:background="@drawable/edit_text_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor"/>

    <EditText
        android:visibility="gone"
        android:id="@+id/numero_apt_despesa"
        android:background="@drawable/edit_text_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero do apartamento"/>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_mod"
        android:text="Inserir despesa"
        android:onClick="inserirDespesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>